{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "endOfLine": "auto",
        "bracketSpacing": true
      }
    ]
  },
  "env": {
    "jest": true
  }
}
